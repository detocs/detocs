{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@desktop/*": [ "src/desktop/*" ],
      "@export/*": [ "src/export/*" ],
      "@import/*": [ "src/import/*" ],
      "@models/*": [ "src/models/*" ],
      "@server/*": [ "src/server/*" ],
      "@services/*": [ "src/services/*" ],
      "@upload/*": [ "src/upload/*" ],
      "@util/*": [ "src/util/*" ],
      "@web/*": [ "src/web/*" ],
      "package.json": [ "package.json" ]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [ "src/" ]
}
